.blue {
  color: #3474FF !important;
}
.red {
  color: #FF4234 !important;
}
.page {
  padding: 35rpx 45rpx;
  position: relative;
}
.logo {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 45rpx;
}
.add {
  position: absolute;
  top: 50rpx;
  display: flex;
}
.add .icon {
  width: 40rpx;
  margin-right: 10rpx;
  margin-top: 6rpx;
}
.add text {
  font-size: 32rpx;
  color: #3474FF;
}
.list-title {
  margin-bottom: 35rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #3474FF;
  border-left: solid 15rpx #3474FF;
  padding-left: 20rpx;
}
.item {
  border: solid 1rpx #E0E0E0;
  padding: 30rpx;
  background-color: #F7F9FD;
  border-radius: 15rpx;
  margin-bottom: 45rpx;
}
.item .header {
  display: flex;
  justify-content: space-between;
  border-bottom: solid 1rpx #E0E0E0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}
.item .header .left {
  display: flex;
}
.item .header .left .icon {
  width: 46rpx;
  margin-right: 20rpx;
  margin-top: -5rpx;
}
.item .header .left text {
  font-size: 32rpx;
  color: #333;
}
.item .header .right text {
  font-size: 32rpx;
  color: #3474FF;
}
.item .content {
  position: relative;
}
.item .content .title {
  font-size: 34rpx;
  color: #333;
}
.item .content .attr {
  display: flex;
  font-size: 30rpx;
  color: #999999;
  padding: 15rpx 0;
}
.item .content .attr .timer,
.item .content .attr .creator,
.item .content .attr .place {
  display: flex;
  margin-right: 35rpx;
}
.item .content .attr .timer .icon,
.item .content .attr .creator .icon,
.item .content .attr .place .icon {
  width: 36rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
}
.item .content .attr .place {
  margin-right: 0 !important;
  max-width: 185rpx;
}
.item .content .desc {
  font-size: 30rpx;
  color: #999999;
  line-height: 1.6;
}
.item .content .btn {
  position: absolute;
  right: 0;
  top: 20rpx;
  background-color: #3474FF;
  color: #FFFFFF;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
}
.item .content .btn:active {
  background-color: #0052FF;
}
.item .content .btn::after {
  border: none;
}

